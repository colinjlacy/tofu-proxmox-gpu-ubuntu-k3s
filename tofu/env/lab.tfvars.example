# Proxmox Configuration
proxmox_endpoint    = "https://192.168.0.37:8006"
proxmox_api_token   = "user@realm!tokenid=secret-value-here"
proxmox_insecure    = true
proxmox_node        = "nuc"


# Storage and Network
vm_storage          = "local-lvm"
vm_network_bridge   = "vmbr0"
vm_disk_size_gb     = 30

# Cluster Configuration
name_prefix         = "k3s"
k3s_version         = "v1.30.8+k3s1"

# SSH Access
# Fetch your SSH key from GitHub: https://github.com/colinjlacy.keys
ssh_public_keys = [
  "ssh-ed25519 AAAAC3... your-key-here"
]

# GPU Configuration
gpu_pci_id          = "00000000:00:10.0"
nvidia_driver_version = "580"

# Node Sizing
server_cores        = 4
server_memory_mb    = 4096

worker_cores        = 2
worker_memory_mb    = 4096
worker_count        = 2

gpu_worker_cores    = 4
gpu_worker_memory_mb = 8192

